@model UsuarioModel
@{
    ViewData["Title"] = "Criar de Usuário";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post" >

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Informe o nome do usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Informe o e-mail do usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="nome">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Informe o Login do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="nome">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@ControleContatos.Enums.PerfilEnum.Admin">Administrador</option>
            <option value="@ControleContatos.Enums.PerfilEnum.Padrao">Padrão</option>
        </select>
    </div>

    <div class="form-group">
        <label for="nome">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Informe a senha do usuário">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>